<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :size => 30 %>

  <%= f.label :description %>
  <%= f.text_area :description, :cols => "29" %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url, :size => 30 %>

  <%= f.label :website %>
  <%= f.text_field :website, :size => 30 %>

  <%= f.label :stage_id %>
  <%= f.collection_select(:stage_id, Stage.all, :id, :name) %>

  <%= f.submit (@artist.new_record? ? "Create" : "Update") %>
<% end %>
