<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.submit (@artist.new_record? ? "Create" : "Update") %>
<% end %>
